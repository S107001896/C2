```
#include <stdio.h>
#include <stdlib.h>
printme()
{

	   printf("Hello 偉大的恩師!\n");  	/* 印出Hello 偉大的恩師! 字串 */
	   printf("Hello Taiwan!\n") ;  /* 印出Hello Taiwan! 字串 */   
}

printtree()
{
      printf("    \n"); 
      printf("    \n"); 
      printf("    *    \n"); 
      printf("   ***    \n"); 
      printf("  *****    \n");  
      printf(" *******    \n");
}
      

int main(void)
{
   printf("我是史上最霹靂無敵的蔡育溱!\n");
   printme();
   printtree();
//  system("pause");
   return 0;
   printf("Hello World!\n");
}
