#include <stdio.h>
#include <stdlib.h>
int main(void)
{
   int a=5;
   int b=8;
   printf("a=%d, !a=%d\n",a,!a);	/* 印出a及!a的值 */
   printf("b=%d, !b=%d\n",b,!b);	/* 印出b及!b的值 */
   
   system("pause");   
   return 0;
}

a=5, !a=0
b=8, !b=0

